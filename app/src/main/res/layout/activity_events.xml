                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="Date" />

