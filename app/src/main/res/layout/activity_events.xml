<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Events">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/educationusalogo"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="295dp"
        android:layout_height="212dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="69dp"
        android:layout_marginBottom="219dp"
        app:srcCompat="@android:color/black" />

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:background="#413F42">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="2dp" android:divider="@color/purple_500" android:dividerPadding="4dp" android:orientation="vertical" android:showDividers="middle">
            <TextView android:id="@+id/textView" android:layout_width="wrap_content" android:layout_height="100dp" android:layout_gravity="center_horizontal" android:layout_weight="1" android:fontFamily="@font/baby" android:textSize="20dp" android:text="10 Dishes Every Jamaican Should Know How to Cook - Jamaicans ..." android:textColor="#E5F1D7"/>
            <LinearLayout android:id="@+id/sec1" android:layout_width="match_parent" android:layout_height="200dp" android:orientation="horizontal">
                <androidx.cardview.widget.CardView android:layout_width="150dp" android:layout_height="150dp" android:elevation="30dp" app:cardBackgroundColor="#6E6969">
                    <ImageView android:id="@+id/im1" android:layout_width="200dp" android:layout_height="250dp" android:scaleType="centerCrop" tools:srcCompat="@tools:sample/avatars"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView android:layout_width="261dp" android:layout_height="150dp" android:elevation="30dp" app:cardBackgroundColor="#ECDDDD">
                    <TextView android:id="@+id/dtex" android:layout_width="236dp" android:layout_height="104dp" android:layout_gravity="center" android:gravity="center_horizontal" android:padding="@dimen/cardview_compat_inset_shadow" android:text="Hello World!"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout android:id="@+id/sec2" android:layout_width="match_parent" android:layout_height="200dp" android:orientation="horizontal">
                <androidx.cardview.widget.CardView android:layout_width="150dp" android:layout_height="150dp" android:elevation="30dp" app:cardBackgroundColor="#6E6969">
                    <ImageView android:id="@+id/im2" android:layout_width="200dp" android:layout_height="250dp" android:scaleType="centerCrop" tools:srcCompat="@tools:sample/avatars"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView android:layout_width="261dp" android:layout_height="150dp" app:cardBackgroundColor="#ECDDDD">
                    <TextView android:id="@+id/dtex2" android:layout_width="236dp" android:layout_height="104dp" android:layout_gravity="center" android:gravity="center_horizontal" android:padding="@dimen/cardview_compat_inset_shadow" android:text="Hello World!"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout android:id="@+id/sec3" android:layout_width="match_parent" android:layout_height="200dp" android:orientation="horizontal">
                <androidx.cardview.widget.CardView android:layout_width="150dp" android:layout_height="150dp" android:elevation="30dp" app:cardBackgroundColor="#6E6969">
                    <ImageView android:id="@+id/im3" android:layout_width="200dp" android:layout_height="250dp" android:scaleType="centerCrop" tools:srcCompat="@tools:sample/avatars"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView android:layout_width="261dp" android:layout_height="150dp" app:cardBackgroundColor="#ECDDDD">
                    <TextView android:id="@+id/dtex3" android:layout_width="236dp" android:layout_height="104dp" android:layout_gravity="center" android:gravity="center_horizontal" android:padding="@dimen/cardview_compat_inset_shadow" android:text="Hello World!"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout android:id="@+id/sec4" android:layout_width="match_parent" android:layout_height="200dp" android:orientation="horizontal">
                <androidx.cardview.widget.CardView android:layout_width="150dp" android:layout_height="150dp" android:elevation="30dp" app:cardBackgroundColor="#6E6969">
                    <ImageView android:id="@+id/im4" android:layout_width="200dp" android:layout_height="250dp" android:scaleType="centerCrop" tools:srcCompat="@tools:sample/avatars"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView android:layout_width="261dp" android:layout_height="150dp" app:cardBackgroundColor="#ECDDDD">
                    <TextView android:id="@+id/dtex4" android:layout_width="236dp" android:layout_height="104dp" android:layout_gravity="center" android:gravity="center_horizontal" android:padding="@dimen/cardview_compat_inset_shadow" android:text="Hello World!"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView1"
        android:layout_centerInParent="true"
        android:layout_marginTop="299dp"
        android:text="" />

    <Button
        android:id="@+id/hButton"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_below="@id/textView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="282dp"
        android:layout_marginBottom="8dp"
        android:text="Home" />

    <Button
        android:id="@+id/faqButton"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_below="@id/textView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="151dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="8dp"
        android:text="FAQ" />

    <Button
        android:id="@+id/conButton"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_below="@id/textView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="280dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="8dp"
        android:text="Contacts"
        android:textSize="13sp" />





</RelativeLayout>