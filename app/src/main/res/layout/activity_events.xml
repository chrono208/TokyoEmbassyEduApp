                    android:layout_width="20dp"
                    android:layout_height="180dp"
                    android:elevation="30dp"
                    app:cardBackgroundColor="#6E6969">

                    <ImageView
                        android:id="@+id/im1"
                        android:layout_width="20dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="390dp"
                    android:layout_height="180dp"
                    android:elevation="30dp"
                    app:cardBackgroundColor="#ECDDDD">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="Title" />

                    <TextView
                        android:id="@+id/startDate1"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_below="@id/title1"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="Date" />

                    <TextView
                        android:id="@+id/eType1"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title1"
                        android:layout_gravity="left"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="Event type" />

                    <TextView
                        android:id="@+id/location1"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title1"
                        android:layout_gravity="left"
                        android:layout_marginTop="60dp"
                        android:gravity="center"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="Location:" />

                    <TextView
                        android:id="@+id/to1"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_below="@id/title1"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="To" />

                    <TextView
                        android:id="@+id/online1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title1"
                        android:layout_gravity="right"
                        android:layout_marginTop="40dp"
                        android:gravity="left"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="Online Event" />

                    <TextView
                        android:id="@+id/country1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title1"
                        android:layout_gravity="right"
                        android:layout_marginTop="60dp"
                        android:gravity="left"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="Country" />

