<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Events">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#002D74">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:divider="@color/purple_500"
            android:dividerPadding="4dp"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:fontFamily="@font/amiko"
                android:text="Upcoming Events"
                android:textColor="#E5F1D7"
                android:textSize="20dp" />

            <!--Section 1.-->
            <LinearLayout
                android:id="@+id/sec1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="180dp"
                    android:elevation="30dp"
                    app:cardBackgroundColor="#6E6969">

                    <ImageView
                        android:id="@+id/im1"
                        android:layout_width="20dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="390dp"
                    android:layout_height="180dp"
                    android:elevation="30dp"
                    app:cardBackgroundColor="#ECDDDD">

                    <TextView
                        android:id="@+id/dtex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="Hello World!" />

                    <TextView
                        android:id="@+id/dtex6"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_below="@id/dtex"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="Hello World!" />

                    <TextView
                        android:id="@+id/dtex7"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_below="@id/dtex"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="To" />

                    <TextView
                        android:id="@+id/dtex8"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="Hello World!" />

                    <TextView
                        android:id="@+id/dtex5"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="Hello World!" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--Section 2.-->
            <LinearLayout
                android:id="@+id/sec2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="180dp"
                    android:elevation="30dp"
                    app:cardBackgroundColor="#6E6969">

                    <ImageView
                        android:id="@+id/im2"
                        android:layout_width="20dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="390dp"
                    android:layout_height="180dp"
                    app:cardBackgroundColor="#ECDDDD">

                    <TextView
                        android:id="@+id/dtex2"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_gravity="top"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="Hello World!" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--Section 3.-->
            <LinearLayout
                android:id="@+id/sec3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="180dp"
                    android:elevation="30dp"
                    app:cardBackgroundColor="#6E6969">

                    <ImageView
                        android:id="@+id/im3"
                        android:layout_width="20dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="390dp"
                    android:layout_height="180dp"
                    app:cardBackgroundColor="#ECDDDD">

                    <TextView
                        android:id="@+id/dtex3"
                        android:layout_width="236dp"
                        android:layout_height="104dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="Hello World!" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--Section 4.-->
            <LinearLayout
                android:id="@+id/sec4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="180dp"
                    android:elevation="30dp"
                    app:cardBackgroundColor="#6E6969">

                    <ImageView
                        android:id="@+id/im4"
                        android:layout_width="20dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="390dp"
                    android:layout_height="180dp"
                    app:cardBackgroundColor="#ECDDDD">

                    <TextView
                        android:id="@+id/dtex4"
                        android:layout_width="236dp"
                        android:layout_height="104dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="Hello World!" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>