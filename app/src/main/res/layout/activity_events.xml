                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:fontFamily="@font/amiko"
                android:text="Upcoming Events"
                android:textColor="#E5F1D7"
                android:textSize="20dp" />

